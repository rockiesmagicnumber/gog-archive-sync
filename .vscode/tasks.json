{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/gog-library-latest.cpp",
                "${workspaceFolder}/src/utility.cpp",
                "-o",
                "${fileDirname}/../build/${fileBasenameNoExtension}",
                "-I", 
                "/usr/include/pstreams/",
                "-I",
                "/usr/include/boost"
            ],
            "options": {
                "cwd": "${fileDirname}/../build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}